{% extends "FotoJoinFrontPageBundle::base.html.twig" %}

{% trans_default_domain 'FotoJoinUserBundle' %}

{% block title %}Contacto{% endblock %}

{% block body %}

<div class="section fill" id="register">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-lg-offset-2">
                <div class="transparent-square">
                    <h1 class="page-header">Formulario de Contacto</h1>
                    <div class="panel panel-default">
                        <div class="panel-body">
                        {{ form_start(form, { 'style': 'horizontal', 'widget_col': 12, 'attr': {'id': 'contact'} }) }}
                            {{ form_widget(form) }}
                            <div class="form-group"><div class="col-xs-12">
                                <button type="submit" class="btn btn-block btn-primary">Enviar</button>
                            </div></div>
                        {{ form_end(form) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div id="push"></div>
</div>

{% include 'FotoJoinFrontPageBundle::footer.html.twig' %}

{% endblock %}