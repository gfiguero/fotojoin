{% extends 'FotoJoinAdminBundle:Photography:layout.html.twig' %}

{% trans_default_domain 'FotoJoinAdminBundle' %}

{% block title %}{{ 'photography.show.title'|trans }}{% endblock %}

{% block photography %}

    <div class="row" id="page-show">
        <div class="col-lg-6">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h2 class="panel-title">{{ 'photography.show.title'|trans }}</h2>
                </div>
                <div class="panel-body">
                    <dl class="dl-horizontal">
                        <dt>{{ 'photography.form.id'|trans }}</dt><dd>{% if photography.id %}{{ photography.id }}{% endif %}</dd>
                        <dt>{{ 'photography.form.filename'|trans }}</dt><dd>{% if photography.filename %}{{ photography.filename }}{% endif %}</dd>
                    </dl>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="btn-toolbar">
                <div class="btn-group"><a type="button" class="btn btn-warning" href="{{ path('admin_photography_edit', {'id' : photography.id}) }}">{{ icon('edit fa-fw') }}&nbsp;{{ 'photography.edit.link'|trans }}</a></div>
                <div class="btn-group"><a type="button" class="btn btn-danger" href="{{ path('admin_photography_delete', {'id' : photography.id}) }}">{{ icon('times fa-fw') }}&nbsp;{{ 'photography.delete.link'|trans }}</a></div>
            </div>
        </div>
    </div>
    <!-- /#page-show -->

{% endblock %}

