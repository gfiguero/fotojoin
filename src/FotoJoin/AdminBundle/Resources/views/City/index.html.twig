{% extends 'FotoJoinAdminBundle:Base:base.html.twig' %}
{% use 'FotoJoinAdminBundle:Base:navbar.html.twig' %}
{% use 'FotoJoinAdminBundle:Base:sidebar.html.twig' %}
{% use 'FotoJoinAdminBundle:Base:icons.html.twig' %}

{% set translation_domain = 'FotoJoinAdminBundle' %}
{% trans_default_domain translation_domain %}

{% block title %}{{ 'city.title.index'|trans }}{% endblock %}

{% block body %}
    <div id="page-wrapper">
        <div class="row" id="page-header">
            <div class="col-lg-12">
                <h1 class="page-header">{% block icons %}{{ parent() }}{% endblock %}{{ 'city.title.index'|trans }}</h1>
                {% include 'FotoJoinAdminBundle:Base:flashbag.html.twig' with { 'translation_domain': translation_domain } %}
            </div>
        </div>
        <!-- /#page-header -->

        <div class="row" id="page-toolbar">
            <div class="col-lg-12">
                <div class="btn-toolbar">
                    <a type="button" class="btn btn-success" href="{{ path('admin_city_new') }}">{{ icon('plus') }}&nbsp;{{ 'city.new.link'|trans }}</a>
                </div>
            </div>
        </div>
        <!-- /#page-toolbar -->

        <div class="row" id="page-list">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h2 class="panel-title">{{ 'city.index.list'|trans }}</h2>
                    </div>
                    <div class="table-responsive">
                        <table class="records_list table table-striped table-hover">
                            <thead>
                                <tr>
                                    <th>{{ 'city.form.actions'|trans }}</th>
                                    <th>{{ knp_pagination_sortable(cities, 'city.form.id'|trans, 'id') }}{% if sort == 'id' %}{% if direction == 'desc' %}{{ icon('caret-down') }}{% else %}{{ icon('caret-up') }}{% endif %}{% endif %}</th>
                                    <th>{{ knp_pagination_sortable(cities, 'city.form.name'|trans, 'name') }}{% if sort == 'name' %}{% if direction == 'desc' %}{{ icon('caret-down') }}{% else %}{{ icon('caret-up') }}{% endif %}{% endif %}</th>
                                    <th>{{ knp_pagination_sortable(cities, 'city.form.country'|trans, 'country') }}{% if sort == 'country' %}{% if direction == 'desc' %}{{ icon('caret-down') }}{% else %}{{ icon('caret-up') }}{% endif %}{% endif %}</th>
                                </tr>
                            </thead>
                            <tbody>
                            {% for key, city in cities %}
                                <tr>
                                    <td>
                                        <div class="btn-toolbar">
                                            <div class="btn-group" role="group">
                                                <a type="button" class="btn btn-sm btn-warning" href="{{ path('admin_city_show', { 'id': city.id }) }}" aria-label="{{ 'city.show.link'|trans }}">{{ icon('search') }}</a>
                                                <a type="button" class="btn btn-sm btn-primary" href="{{ path('admin_city_edit', { 'id': city.id }) }}" aria-label="{{ 'city.show.link'|trans }}">{{ icon('edit') }}</a>
                                                <button type="button" class="btn btn-sm btn-danger" data-toggle="modal" data-target="#modalDelete{{ city.id }}">{{ icon('trash') }}</button>
                                            </div>
                                        </div>
                                    </td>
                                    <td>{% if city.id %}{{ city.id }}{% endif %}</td>
                                    <td>{% if city.name %}{{ city.name }}{% endif %}</td>
                                    <td>{% if city.country %}{{ city.country }}{% endif %}</td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                    <div class="panel-footer">
                        <div class="text-center">
                            {{ knp_pagination_render(cities) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- /#page-list -->

        <div id="page-modal">
            {% for key, city in cities %}
            <div class="modal fade" id="modalDelete{{ city.id }}" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
                <div class="modal-dialog modal-sm" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">{{ icon('times') }}</button>
                            <h4 class="modal-title" id="myModalLabel">{{ 'city.delete.title'|trans }}</h4>
                        </div>
                        <div class="modal-body">
                            <div class="row">
                                <div class="col-xs-2 text-center">{{ icon('exclamation-triangle fa-5x') }}</div>
                                <div class="col-xs-10"><p>{{ 'city.delete.message'|trans }}</p></div>
                            </div>
                        </div>
                        <div class="modal-footer">
                            {% set deleteForm = attribute(deleteForms, key) %}
                            {{ form_start(deleteForm) }}
                                {{ form_widget(deleteForm) }}
                                <button type="submit" class="btn btn-danger pull-right">{{ icon('trash') }}&nbsp;{{ 'city.delete.submit'|trans }}</button>
                            {{ form_end(deleteForm) }}
                        </div>
                    </div>
                </div>
            </div>
            {% endfor %}
        </div>
        <!-- /#page-modal -->

    </div>
    <!-- /#page-wrapper -->

{% endblock %}
