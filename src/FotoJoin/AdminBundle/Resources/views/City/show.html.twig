{% extends 'FotoJoinAdminBundle:City:layout.html.twig' %}

{% trans_default_domain 'FotoJoinAdminBundle' %}

{% block title %}{{ 'city.show.title'|trans }}{% endblock %}

{% block city %}

    <div class="row" id="page-show">
        <div class="col-lg-6">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h2 class="panel-title">{{ 'city.show.title'|trans }}</h2>
                </div>
                <div class="panel-body">
                    <dl class="dl-horizontal">
                        <dt>{{ 'city.form.id'|trans }}</dt><dd>{% if city.id %}{{ city.id }}{% endif %}</dd>
                        <dt>{{ 'city.form.name'|trans }}</dt><dd>{% if city.name %}{{ city.name }}{% endif %}</dd>
                    </dl>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="btn-toolbar">
                <div class="btn-group"><a type="button" class="btn btn-warning" href="{{ path('admin_city_edit', {'id' : city.id}) }}">{{ icon('edit fa-fw') }}&nbsp;{{ 'city.edit.link'|trans }}</a></div>
                <div class="btn-group"><a type="button" class="btn btn-danger" href="{{ path('admin_city_delete', {'id' : city.id}) }}">{{ icon('times fa-fw') }}&nbsp;{{ 'city.delete.link'|trans }}</a></div>
            </div>
        </div>
    </div>
    <!-- /#page-show -->

{% endblock %}

