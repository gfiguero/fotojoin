{% extends 'FotoJoinAdminBundle:Base:base.html.twig' %}
{% use 'FotoJoinAdminBundle:Base:navbar.html.twig' %}
{% use 'FotoJoinAdminBundle:Base:sidebar.html.twig' %}
{% use 'FotoJoinAdminBundle:Base:icons.html.twig' %}
{% use 'FotoJoinAdminBundle:Base:flashbag.html.twig' %}

{% trans_default_domain 'FotoJoinAdminBundle' %}

{% block title %}{{ 'appraisement.show.title'|trans({'%id%':appraisement.id}) }}{% endblock %}

{% block body %}
    <div class="row" id="page-breadcrumb">
        <div class="col-lg-12">
            <ol class="breadcrumb">
                            <li><a href='{{ path('admin_user_show', { 'id' : appraisement.photography.album.user.id }) }}'>{{'user.show.breadcrumb'|trans({'%id%':appraisement.photography.album.user.id}) }}</a></li>
                <li><a href='{{ path('admin_album_show', { 'id' : appraisement.photography.album.id }) }}'>{{'album.show.breadcrumb'|trans({'%id%':appraisement.photography.album.id}) }}</a></li>
                <li><a href='{{ path('admin_photography_show', { 'id' : appraisement.photography.id }) }}'>{{'photography.show.breadcrumb'|trans({'%id%':appraisement.photography.id}) }}</a></li>
                <li class="active">{{'appraisement.show.breadcrumb'|trans({'%id%':appraisement.id}) }}</li>
            </ol>
        </div>
    </div>
    <!-- /#page-breadcrumb -->
    
    <div id="page-wrapper">
        <div class="row" id="page-header">
            <div class="col-lg-12">
                <h1 class="page-header">{% block icons %}{{ parent() }}{% endblock %}{{ 'appraisement.show.title'|trans({'%id%':appraisement.id}) }}</h1>
                {% block flashbag %}{{ parent() }}{% endblock %}
            </div>
        </div>
        <!-- /#page-header -->

        <div class="row" id="page-toolbar">
            <div class="col-lg-12">
                <div class="btn-toolbar">
                    <a type="button" class="btn btn-default" href="{{ path('admin_appraisement_index') }}">{{ icon('list') }}&nbsp;{{ 'appraisement.index.link'|trans }}</a>
                    <a type="button" class="btn btn-primary" href="{{ path('admin_appraisement_edit', { 'id': appraisement.id }) }}">{{ icon('edit') }}&nbsp;{{ 'appraisement.edit.link'|trans }}</a>
                    <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#modalDelete">{{ icon('trash-o') }}&nbsp;{{ 'appraisement.delete.link'|trans }}</button>
                </div>
            </div>
        </div>
        <!-- /#page-toolbar -->

        <div class="row" id="page-show">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h2 class="panel-title">{{ 'appraisement.show.data'|trans }}</h2>
                    </div>
                    <div class="panel-body">
                        <dl>
                            <dt>{{ 'appraisement.form.id'|trans }}</dt>
                                <dd>{% if appraisement.id %}{{ appraisement.id }}{% endif %}</dd>
                            <dt>{{ 'appraisement.form.value'|trans }}</dt>
                                <dd>{% if appraisement.value %}{{ appraisement.value }}{% endif %}</dd>
                            <dt>{{ 'appraisement.form.score'|trans }}</dt>
                                <dd>{% if appraisement.score %}{{ appraisement.score }}{% endif %}</dd>
                            <dt>{{ 'appraisement.form.delay'|trans }}</dt>
                                <dd>{% if appraisement.delay %}{{ appraisement.delay }}{% endif %}</dd>
                            <dt>{{ 'appraisement.form.ip'|trans }}</dt>
                                <dd>{% if appraisement.ip %}{{ appraisement.ip }}{% endif %}</dd>
                            <dt>{{ 'appraisement.form.createdAt'|trans }}</dt>
                                <dd>{% if appraisement.createdAt %}{{ appraisement.createdAt|localizeddate('full', 'full', 'es_ES', 'America/Santiago', "d 'de' LLLL 'de' Y - HH:mm") }}{% endif %}</dd>
                            <dt>{{ 'appraisement.form.updatedAt'|trans }}</dt>
                                <dd>{% if appraisement.updatedAt %}{{ appraisement.updatedAt|localizeddate('full', 'full', 'es_ES', 'America/Santiago', "d 'de' LLLL 'de' Y - HH:mm") }}{% endif %}</dd>                        </dl>
                    </div>
                </div>
            </div>
        </div>
        <!-- /#page-show -->

        
        
        

        <div id="page-modal">
            <div class="modal fade" id="modalDelete" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
                <div class="modal-dialog modal-sm" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">{{ icon('times') }}</button>
                            <h4 class="modal-title" id="myModalLabel">{{ 'appraisement.delete.title'|trans }}</h4>
                        </div>
                        <div class="modal-body">
                            <div class="row">
                                <div class="col-xs-2 text-center">{{ icon('exclamation-triangle fa-5x') }}</div>
                                <div class="col-xs-10"><p>{{ 'appraisement.delete.message'|trans }}</p></div>
                            </div>
                        </div>
                        <div class="modal-footer">
                            {{ form_start(deleteForm) }}
                                <button type="submit" class="btn btn-danger pull-right">{{ icon('trash-o') }}&nbsp;{{ 'appraisement.delete.submit'|trans }}</button>
                            {{ form_end(deleteForm) }}
                        </div>
                    </div>
                </div>
            </div>

        </div>
        <!-- /#page-modal -->

    </div>
    <!-- /#page-wrapper -->
{% endblock %}

