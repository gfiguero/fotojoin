{% extends 'FotoJoinAdminBundle:Base:base.html.twig' %}
{% use 'FotoJoinAdminBundle:Base:navbar.html.twig' %}
{% use 'FotoJoinAdminBundle:Base:sidebar.html.twig' %}
{% use 'FotoJoinAdminBundle:Base:icons.html.twig' %}
{% use 'FotoJoinAdminBundle:Base:flashbag.html.twig' %}

{% trans_default_domain 'FotoJoinAdminBundle' %}

{% block title %}{{ 'user.show.title'|trans({'%id%':user.id}) }}{% endblock %}

{% block body %}
    <div class="row" id="page-breadcrumb">
        <div class="col-lg-12">
            <ol class="breadcrumb">
            <li class="active">{{'user.show.breadcrumb'|trans({'%id%':user.id}) }}</li>
            </ol>
        </div>
    </div>
    <!-- /#page-breadcrumb -->
    
    <div id="page-wrapper">
        <div class="row" id="page-header">
            <div class="col-lg-12">
                <h1 class="page-header">{% block icons %}{{ parent() }}{% endblock %}{{ 'user.show.title'|trans({'%id%':user.id}) }}</h1>
                {% block flashbag %}{{ parent() }}{% endblock %}
            </div>
        </div>
        <!-- /#page-header -->

        <div class="row" id="page-toolbar">
            <div class="col-lg-12">
                <div class="btn-toolbar">
                    <a type="button" class="btn btn-default" href="{{ path('admin_user_index') }}">{{ icon('list') }}&nbsp;{{ 'user.index.link'|trans }}</a>
                    <a type="button" class="btn btn-primary" href="{{ path('admin_user_edit', { 'id': user.id }) }}">{{ icon('edit') }}&nbsp;{{ 'user.edit.link'|trans }}</a>
                    <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#modalDelete">{{ icon('trash-o') }}&nbsp;{{ 'user.delete.link'|trans }}</button>
                </div>
            </div>
        </div>
        <!-- /#page-toolbar -->

        <div class="row" id="page-show">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h2 class="panel-title">{{ 'user.show.data'|trans }}</h2>
                    </div>
                    <div class="panel-body">
                        <dl>
                            <dt>{{ 'user.form.id'|trans }}</dt>
                                <dd>{% if user.id %}{{ user.id }}{% endif %}</dd>
                            <dt>{{ 'user.form.level'|trans }}</dt>
                                <dd>{% if user.level %}{{ user.level }}{% endif %}</dd>
                            <dt>{{ 'user.form.description'|trans }}</dt>
                                <dd>{% if user.description %}{{ user.description }}{% endif %}</dd>
                            <dt>{{ 'user.form.publiccontact'|trans }}</dt>
                                <dd>{% if user.publiccontact %}{{ 'Si' }}{% else %}{{ 'No' }}{% endif %}</dd>
                            <dt>{{ 'user.form.exigency'|trans }}</dt>
                                <dd>{% if user.exigency %}{{ user.exigency }}{% endif %}</dd>
                            <dt>{{ 'user.form.facebookid'|trans }}</dt>
                                <dd>{% if user.facebookid %}{{ user.facebookid }}{% endif %}</dd>
                            <dt>{{ 'user.form.facebookaccesstoken'|trans }}</dt>
                                <dd>{% if user.facebookaccesstoken %}{{ user.facebookaccesstoken }}{% endif %}</dd>
                            <dt>{{ 'user.form.facebookshare'|trans }}</dt>
                                <dd>{% if user.facebookshare %}{{ 'Si' }}{% else %}{{ 'No' }}{% endif %}</dd>
                            <dt>{{ 'user.form.googleid'|trans }}</dt>
                                <dd>{% if user.googleid %}{{ user.googleid }}{% endif %}</dd>
                            <dt>{{ 'user.form.googleaccesstoken'|trans }}</dt>
                                <dd>{% if user.googleaccesstoken %}{{ user.googleaccesstoken }}{% endif %}</dd>
                            <dt>{{ 'user.form.twitterid'|trans }}</dt>
                                <dd>{% if user.twitterid %}{{ user.twitterid }}{% endif %}</dd>
                            <dt>{{ 'user.form.twitteraccesstoken'|trans }}</dt>
                                <dd>{% if user.twitteraccesstoken %}{{ user.twitteraccesstoken }}{% endif %}</dd>
                            <dt>{{ 'user.form.name'|trans }}</dt>
                                <dd>{% if user.name %}{{ user.name }}{% endif %}</dd>
                            <dt>{{ 'user.form.birthdate'|trans }}</dt>
                                <dd>{% if user.birthdate %}{{ user.birthdate|localizeddate('full', 'full', 'es_ES', 'America/Santiago', "d 'de' LLLL 'de' Y") }}{% endif %}</dd>
                            <dt>{{ 'user.form.profilephotofilename'|trans }}</dt>
                                <dd>{% if user.profilephotofilename %}{{ user.profilephotofilename }}{% endif %}</dd>
                            <dt>{{ 'user.form.createdAt'|trans }}</dt>
                                <dd>{% if user.createdAt %}{{ user.createdAt|localizeddate('full', 'full', 'es_ES', 'America/Santiago', "d 'de' LLLL 'de' Y - HH:mm") }}{% endif %}</dd>
                            <dt>{{ 'user.form.updatedAt'|trans }}</dt>
                                <dd>{% if user.updatedAt %}{{ user.updatedAt|localizeddate('full', 'full', 'es_ES', 'America/Santiago', "d 'de' LLLL 'de' Y - HH:mm") }}{% endif %}</dd>                        </dl>
                    </div>
                </div>
            </div>
        </div>
        <!-- /#page-show -->

        <div class="row" id="page-list">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h2 class="panel-title">{{ 'album.index.list'|trans }}</h2>
                    </div>
                    <div class="table-responsive">
                        <table class="records_list table table-striped table-hover">
                            <thead>
                                <tr>
                                    <th>
                                        <div class="btn-group" role="group"><a type="button" class="btn btn-xs btn-default disabled">{{ icon('search fa-fw') }}</a></div>
                                        <div class="btn-group" role="group"><a type="button" class="btn btn-xs btn-default disabled">{{ icon('edit fa-fw') }}</a></div>
                                    </th>
                                    <th>{{ 'album.form.id'|trans }}</th>
                                    <th>{{ 'album.form.name'|trans }}</th>
                                    <th>{{ 'album.form.createdAt'|trans }}</th>
                                    <th>{{ 'album.form.updatedAt'|trans }}</th>
                                </tr>
                            </thead>
                            <tbody>
                            {% for key, album in user.albums %}
                                <tr>
                                    <td>
                                        <div class="btn-group" role="group"><a type="button" class="btn btn-xs btn-primary" href='{{ path('admin_album_show', { 'id': album.id }) }}'>{{ icon('search fa-fw') }}</a></div>
                                        <div class="btn-group" role="group"><a type="button" class="btn btn-xs btn-primary" href='{{ path('admin_album_edit', { 'id': album.id }) }}'>{{ icon('edit fa-fw') }}</a></div>
                                    </td>
                                    <td>{% if album.id %}{{ album.id }}{% endif %}</td>
                                    <td>{% if album.name %}{{ album.name }}{% endif %}</td>
                                    <td>{% if album.createdAt %}{{ album.createdAt|localizeddate('full', 'full', 'es_ES', 'America/Santiago', 'dd-LLL-Y - HH:mm') }}{% endif %}</td>
                                    <td>{% if album.updatedAt %}{{ album.updatedAt|localizeddate('full', 'full', 'es_ES', 'America/Santiago', 'dd-LLL-Y - HH:mm') }}{% endif %}</td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <!-- /#page-list -->
        
        
        

        <div id="page-modal">
            <div class="modal fade" id="modalDelete" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
                <div class="modal-dialog modal-sm" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">{{ icon('times') }}</button>
                            <h4 class="modal-title" id="myModalLabel">{{ 'user.delete.title'|trans }}</h4>
                        </div>
                        <div class="modal-body">
                            <div class="row">
                                <div class="col-xs-2 text-center">{{ icon('exclamation-triangle fa-5x') }}</div>
                                <div class="col-xs-10"><p>{{ 'user.delete.message'|trans }}</p></div>
                            </div>
                        </div>
                        <div class="modal-footer">
                            {{ form_start(deleteForm) }}
                                <button type="submit" class="btn btn-danger pull-right">{{ icon('trash-o') }}&nbsp;{{ 'user.delete.submit'|trans }}</button>
                            {{ form_end(deleteForm) }}
                        </div>
                    </div>
                </div>
            </div>

        </div>
        <!-- /#page-modal -->

    </div>
    <!-- /#page-wrapper -->
{% endblock %}

