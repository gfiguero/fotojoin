{% extends 'FotoJoinAdminBundle:User:layout.html.twig' %}

{% trans_default_domain 'FotoJoinAdminBundle' %}

{% block title %}{{ 'user.delete.title'|trans }}{% endblock %}

{% block user %}

    <div class="row" id="page-delete">
        <div class="col-lg-6">
            <div class="panel panel-danger">
                <div class="panel-heading">
                    <h2 class="panel-title">{{ 'user.delete.title'|trans }}</h2>
                </div>
                <div class="panel-body">
                    <dl class="dl-horizontal">
                        <dt>{{ 'user.form.id'|trans }}</dt><dd>{% if user.id %}{{ user.id }}{% endif %}</dd>
                        <dt>{{ 'user.form.username'|trans }}</dt><dd>{% if user.username %}{{ user.username }}{% endif %}</dd>
                    </dl>
                </div>
            </div>
        </div>
        {{ form_start(deleteForm) }}
        {{ form_widget(deleteForm) }}
        <div class="col-md-6">
            <div class="btn-toolbar">
                <div class="btn-group"><button type="submit" class="btn btn-danger">{{ icon('times fa-fw') }}&nbsp;{{ 'user.delete.submit'|trans }}</button></div>
                <div class="btn-group"><a type="button" class="btn btn-default" href="{{ path('admin_user_show', {'id' : user.id}) }}">{{ icon('times fa-fw') }}&nbsp;{{ 'user.delete.cancel'|trans }}</a></div>
            </div>
        </div>
        {{ form_end(deleteForm) }}
    </div>
    <!-- /#page-delete -->

{% endblock %}
