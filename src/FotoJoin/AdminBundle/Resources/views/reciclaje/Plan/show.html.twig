{% extends 'FotoJoinAdminBundle:Base:base.html.twig' %}
{% use 'FotoJoinAdminBundle:Base:navbar.html.twig' %}
{% use 'FotoJoinAdminBundle:Base:sidebar.html.twig' %}
{% use 'FotoJoinAdminBundle:Base:icons.html.twig' %}
{% use 'FotoJoinAdminBundle:Base:flashbag.html.twig' %}

{% trans_default_domain 'FotoJoinAdminBundle' %}

{% block title %}{{ 'plan.show.title'|trans({'%id%':plan.id}) }}{% endblock %}

{% block body %}
    
    <div id="page-wrapper">
        <div class="row" id="page-header">
            <div class="col-lg-12">
                <h1 class="page-header">{% block icons %}{{ parent() }}{% endblock %}{{ 'plan.show.title'|trans({'%id%':plan.id}) }}</h1>
                {% block flashbag %}{{ parent() }}{% endblock %}
            </div>
        </div>
        <!-- /#page-header -->

        <div class="row" id="page-toolbar">
            <div class="col-lg-12">
                <div class="btn-toolbar">
                    <a type="button" class="btn btn-default" href="{{ path('admin_plan_index') }}">{{ icon('list') }}&nbsp;{{ 'plan.index.link'|trans }}</a>
                    <a type="button" class="btn btn-primary" href="{{ path('admin_plan_edit', { 'id': plan.id }) }}">{{ icon('edit') }}&nbsp;{{ 'plan.edit.link'|trans }}</a>
                    <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#modalDelete">{{ icon('trash-o') }}&nbsp;{{ 'plan.delete.link'|trans }}</button>
                </div>
            </div>
        </div>
        <!-- /#page-toolbar -->

        <div class="row" id="page-show">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h2 class="panel-title">{{ 'plan.show.data'|trans }}</h2>
                    </div>
                    <div class="panel-body">
                        <dl>
                            <dt>{{ 'plan.form.id'|trans }}</dt>
                                <dd>{% if plan.id %}{{ plan.id }}{% endif %}</dd>
                            <dt>{{ 'plan.form.name'|trans }}</dt>
                                <dd>{% if plan.name %}{{ plan.name }}{% endif %}</dd>
                            <dt>{{ 'plan.form.max_album'|trans }}</dt>
                                <dd>{% if plan.maxalbum %}{{ plan.maxalbum }}{% endif %}</dd>
                            <dt>{{ 'plan.form.max_photography'|trans }}</dt>
                                <dd>{% if plan.maxphotography %}{{ plan.maxphotography }}{% endif %}</dd>                        </dl>
                    </div>
                </div>
            </div>
        </div>
        <!-- /#page-show -->

        
        
        

        <div id="page-modal">
            <div class="modal fade" id="modalDelete" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
                <div class="modal-dialog modal-sm" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">{{ icon('times') }}</button>
                            <h4 class="modal-title" id="myModalLabel">{{ 'plan.delete.title'|trans }}</h4>
                        </div>
                        <div class="modal-body">
                            <div class="row">
                                <div class="col-xs-2 text-center">{{ icon('exclamation-triangle fa-5x') }}</div>
                                <div class="col-xs-10"><p>{{ 'plan.delete.message'|trans }}</p></div>
                            </div>
                        </div>
                        <div class="modal-footer">
                            {{ form_start(deleteForm) }}
                                <button type="submit" class="btn btn-danger pull-right">{{ icon('trash-o') }}&nbsp;{{ 'plan.delete.submit'|trans }}</button>
                            {{ form_end(deleteForm) }}
                        </div>
                    </div>
                </div>
            </div>

        </div>
        <!-- /#page-modal -->

    </div>
    <!-- /#page-wrapper -->
{% endblock %}

