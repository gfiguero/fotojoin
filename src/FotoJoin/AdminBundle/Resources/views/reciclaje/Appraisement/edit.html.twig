{% extends 'FotoJoinAdminBundle:Base:base.html.twig' %}
{% use 'FotoJoinAdminBundle:Base:navbar.html.twig' %}
{% use 'FotoJoinAdminBundle:Base:sidebar.html.twig' %}
{% use 'FotoJoinAdminBundle:Base:icons.html.twig' %}
{% use 'FotoJoinAdminBundle:Base:flashbag.html.twig' %}

{% trans_default_domain 'FotoJoinAdminBundle' %}

{% block title %}{{ 'appraisement.edit.title'|trans({'%id%':appraisement.id}) }}{% endblock %}

{% block body %}
    <div class="row" id="page-breadcrumb">
        <div class="col-lg-12">
            <ol class="breadcrumb">
                            <li><a href='{{ path('admin_user_show', { 'id' : appraisement.photography.album.user.id }) }}'>{{'user.show.breadcrumb'|trans({'%id%':appraisement.photography.album.user.id}) }}</a></li>
                <li><a href='{{ path('admin_album_show', { 'id' : appraisement.photography.album.id }) }}'>{{'album.show.breadcrumb'|trans({'%id%':appraisement.photography.album.id}) }}</a></li>
                <li><a href='{{ path('admin_photography_show', { 'id' : appraisement.photography.id }) }}'>{{'photography.show.breadcrumb'|trans({'%id%':appraisement.photography.id}) }}</a></li>
                <li class="active">{{'appraisement.show.breadcrumb'|trans({'%id%':appraisement.id}) }}</li>
            </ol>
        </div>
    </div>
    <!-- /#page-breadcrumb -->
    
    <div id="page-wrapper">
        <div class="row" id="page-header">
            <div class="col-lg-12">
                <h1 class="page-header">{% block icons %}{{ parent() }}{% endblock %}{{ 'appraisement.edit.title'|trans({'%id%':appraisement.id}) }}</h1>
                {% block flashbag %}{{ parent() }}{% endblock %}
            </div>
        </div>
        <!-- /#page-header -->

        <div class="row" id="page-toolbar">
            <div class="col-lg-12">
                <div class="btn-toolbar">
                    <a type="button" class="btn btn-default" href="{{ path('admin_appraisement_index') }}">{{ icon('list') }}&nbsp;{{ 'appraisement.index.link'|trans }}</a>
                    <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#modalDelete">{{ icon('trash-o') }}&nbsp;{{ 'appraisement.delete.link'|trans }}</button>
                </div>
            </div>
        </div>
        <!-- /#page-toolbar -->

        <div class="row" id="page-edit">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h2 class="panel-title">{{ 'appraisement.edit.form'|trans }}</h2>
                    </div>
                    <div class="panel-body">
                        {{ form_start(editForm, { 'style': 'horizontal' }) }}
                            {{ form_widget(editForm) }}
                                <div class="form-group"><div class="col-lg-offset-4 col-lg-8">
                                    <button type="submit" class="btn btn-primary">{{ icon('save') }}&nbsp;{{ 'appraisement.edit.submit'|trans }}</button>
                                </div></div>
                        {{ form_end(editForm) }}
                    </div>
                </div>
            </div>
        </div>
        <!-- /#page-edit -->

        <div id="page-modal">
            <div class="modal fade" id="modalDelete" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
                <div class="modal-dialog modal-sm" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">{{ icon('times') }}</button>
                            <h4 class="modal-title" id="myModalLabel">{{ 'appraisement.delete.title'|trans }}</h4>
                        </div>
                        <div class="modal-body">
                            <div class="row">
                                <div class="col-xs-2 text-center">{{ icon('exclamation-triangle fa-5x') }}</div>
                                <div class="col-xs-10"><p>{{ 'appraisement.delete.message'|trans }}</p></div>
                            </div>
                        </div>
                        <div class="modal-footer">
                            {{ form_start(deleteForm) }}
                                <button type="submit" class="btn btn-danger pull-right">{{ icon('trash') }}&nbsp;{{ 'appraisement.delete.submit'|trans }}</button>
                            {{ form_end(deleteForm) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- /#page-modal -->

    </div>
    <!-- /#page-wrapper -->

{% endblock %}

