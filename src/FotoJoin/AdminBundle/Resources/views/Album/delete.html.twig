{% extends 'FotoJoinAdminBundle:Album:layout.html.twig' %}

{% trans_default_domain 'FotoJoinAdminBundle' %}

{% block title %}{{ 'album.delete.title'|trans }}{% endblock %}

{% block album %}

    <div class="row" id="page-delete">
        <div class="col-lg-6">
            <div class="panel panel-danger">
                <div class="panel-heading">
                    <h2 class="panel-title">{{ 'album.delete.title'|trans }}</h2>
                </div>
                <div class="panel-body">
                    <dl class="dl-horizontal">
                        <dt>{{ 'album.form.id'|trans }}</dt><dd>{% if album.id %}{{ album.id }}{% endif %}</dd>
                        <dt>{{ 'album.form.name'|trans }}</dt><dd>{% if album.name %}{{ album.name }}{% endif %}</dd>
                    </dl>
                </div>
            </div>
        </div>
        {{ form_start(deleteForm) }}
        {{ form_widget(deleteForm) }}
        <div class="col-md-6">
            <div class="btn-toolbar">
                <div class="btn-group"><button type="submit" class="btn btn-danger">{{ icon('times fa-fw') }}&nbsp;{{ 'album.delete.submit'|trans }}</button></div>
                <div class="btn-group"><a type="button" class="btn btn-default" href="{{ path('admin_album_show', {'id' : album.id}) }}">{{ icon('times fa-fw') }}&nbsp;{{ 'album.delete.cancel'|trans }}</a></div>
            </div>
        </div>
        {{ form_end(deleteForm) }}
    </div>
    <!-- /#page-delete -->

{% endblock %}
