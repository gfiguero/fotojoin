{% extends "FotoJoinUserBundle:ChangePassword:layout.html.twig" %}

{% trans_default_domain 'FotoJoinUserBundle' %}

{% block title %}{{ 'change_password.title'|trans }}{% endblock %}

{% block changepassword %}
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-body">
                    <h3>{{ icon('lock fa-fw') }}&nbsp;Seguridad</h3>
                    {{ form_start(form, { 'style': 'horizontal', 'action': path('fos_user_change_password'), 'attr': { 'class': 'fos_user_change_password' } }) }}
                        {{ form_widget(form) }}
                        <div class="form-group"><div class="col-lg-offset-3 col-lg-9">
                            <button type="submit" class="btn btn-primary">{{ icon('key') }}&nbsp;{{ 'change_password.submit'|trans }}</button>
                        </div></div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}