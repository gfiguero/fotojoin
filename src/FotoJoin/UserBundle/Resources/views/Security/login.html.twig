                                <a href="{{ path("hwi_oauth_service_redirect", { 'service' : 'google' }) }}" type="button"  id="_submit" name="_submit" class="btn btn-social btn-google">{{ icon('google') }}Google</a>
                                <a href="{{ path("hwi_oauth_service_redirect", { 'service' : 'twitter' }) }}" type="button"  id="_submit" name="_submit" class="btn btn-social btn-twitter">{{ icon('twitter') }}Twitter</a>
                            </div>
                            <hr>

                            <h4 class="text-center">{{ 'security.login.register'|trans }}</h4>
                            <a class="btn btn-primary btn-block" href="{{ path("foto_join_front_page_signup") }}">{{ 'security.register.link'|trans }}</a>                        
                        </div>

                        <div class="panel-footer text-center">
                            <a href="{{ path("fos_user_resetting_request") }}">{{ 'resetting.link'|trans }}</a>                        
                        </div>

                    </div>
                </div>
{#}
            </div>
        </div>
    </div>

    {% block footer %}{{ parent() }}{% endblock %}
{% endblock body %}

