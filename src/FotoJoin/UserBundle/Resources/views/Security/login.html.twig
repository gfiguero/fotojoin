{% extends "FotoJoinFrontPageBundle:Base:base.html.twig" %}
{% use 'FotoJoinFrontPageBundle:Base:navbar.html.twig' %}
{% use 'FotoJoinFrontPageBundle:Base:footer.html.twig' %}

{% trans_default_domain 'FotoJoinUserBundle' %}

{% block title %}{{ 'security.login.title'|trans }}{% endblock %}

{% block stylesheet %}
    <link href="{{ asset('vendor/bootstrap-social/bootstrap-social.css') }}" rel="stylesheet">
    <style type="text/css">
        #login {
            margin-top: 130px;
        }
    </style>
{% endblock %}

{% block body %}
    {% block navbar %}{{ parent() }}{% endblock %}

    <div class="section" id="login">
        <div class="container">
            <div class="row">
                <div class="col-xs-12 col-md-4 col-md-offset-4">
                    <div class="panel panel-default text-center">
{#}
                        <div class="panel-heading">
                            <h2 class="panel-title">{{ 'security.login.title'|trans }}</h2>
                        </div>
{#}
                        <div class="panel-body">
                            <h4 class="text-center">{{ 'security.login.form'|trans }}</h4>
                            <form action="{{ path("fos_user_security_check") }}" method="post">
                                {% if error %}
                                    <div class="alert alert-danger alert-dismissible" role="alert">
                                        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">×</span></button>
                                        {{ error.messageKey|trans(error.messageData, 'security') }}
                                    </div>
                                {% endif %}
                                <div class="form-group">
                                    <div class="input-group">
                                        <div class="input-group-addon">{{ icon('envelope fa-fw') }}</div>
                                        <input class="form-control" type="text" id="username" name="_username" value="{{ last_username }}" required="required"  placeholder="{{ 'security.login.email'|trans }}" />
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="input-group">
                                        <div class="input-group-addon">{{ icon('lock fa-fw') }}</div>
                                        <input class="form-control" type="password" id="password" name="_password" required="required" placeholder="{{ 'security.login.password'|trans }}" />
                                    </div>
                                </div>
                                <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
                                <button type="submit"  id="_submit" name="_submit" class="btn btn-primary btn-block">{{ icon('sign-in') }}&nbsp;{{ 'security.login.submit'|trans }}</button>
                            </form>

                            <hr>
                            <h4 class="text-center">{{ 'security.login.socialmedia'|trans }}</h4>
                            <a href="{{ path("hwi_oauth_service_redirect", { 'service' : 'facebook' }) }}" type="button"  id="_submit" name="_submit" class="btn btn-block btn-social btn-facebook">{{ icon('facebook') }}Facebook</a>
                            <a href="{{ path("hwi_oauth_service_redirect", { 'service' : 'google' }) }}" type="button"  id="_submit" name="_submit" class="btn btn-block btn-social btn-google">{{ icon('google') }}Google</a>
                            <a href="{{ path("hwi_oauth_service_redirect", { 'service' : 'twitter' }) }}" type="button"  id="_submit" name="_submit" class="btn btn-block btn-social btn-twitter">{{ icon('twitter') }}Twitter</a>

                            <hr>
                            <h4 class="text-center">Regístrate en FotoJoin</h4>
                            <a type="button" class="btn btn-default btn-block" href="{{ path('fos_user_registration_register') }}">Crear una cuenta</a>

                        </div>
                        <div class="panel-footer text-center"><a href="{{ path("fos_user_resetting_request") }}">{{ 'resetting.link'|trans }}</a></div>
                    </div>
                </div>

{#}
