{% extends "FotoJoinFrontPageBundle:Base:base.html.twig" %}

{% trans_default_domain 'FotoJoinUserBundle' %}

{% block title %}{{ 'resetting.request.title'|trans }}{% endblock %}

{% block body %}

<div class="section fill" id="resseting">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 col-lg-offset-3">
                <div class="transparent-square">
                    <h1 class="page-header">{{ 'resetting.request.title'|trans }}</h1>
                    <div class="panel panel-default">
                        <div class="panel-body">
                            <form action="{{ path('fos_user_resetting_send_email') }}" method="POST" class="fos_user_resetting_request">
                                <div class="form-group">
                                    {% if invalid_username is defined %}
                                        <div class="alert alert-danger alert-dismissible" role="alert">
                                            <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">Ã—</span></button>
                                            {{ 'resetting.request.invalid_username'|trans({'%username%': invalid_username}) }}
                                        </div>
                                    {% endif %}
                                    <div class="input-group">
                                        <div class="input-group-addon">{{ icon('envelope fa-fw') }}</div>
                                        <input class="form-control" type="text" id="username" name="username" required="required"  placeholder="{{ 'resetting.request.email'|trans }}" />
                                    </div>
                                </div>
                                <button type="submit" class="btn btn-primary btn-block">{{ icon('envelope') }}&nbsp;{{ 'resetting.request.submit'|trans }}</button>
                            </form>
                        </div>
                        <div class="panel-footer text-center"><a href="{{ path("fos_user_security_login") }}">{{ 'security.login.goback'|trans }}</a></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div id="push"></div>
</div>

{% include 'FotoJoinFrontPageBundle::footer.html.twig' %}

{% endblock body %}