{% extends "FotoJoinFrontPageBundle:Base:base.html.twig" %}
{% use 'FotoJoinFrontPageBundle:Base:navbar.html.twig' %}
{% use 'FotoJoinFrontPageBundle:Base:footer.html.twig' %}

{% trans_default_domain 'FotoJoinUserBundle' %}

{% block title %}{{ 'resetting.request.title'|trans }}{% endblock %}

{% block stylesheet %}
    <link href="{{ asset('vendor/bootstrap-social/bootstrap-social.css') }}" rel="stylesheet">
    <style type="text/css">
        #resseting {
            margin-top: 100px;
        }
    </style>
{% endblock %}

{% block body %}
    {% block navbar %}{{ parent() }}{% endblock %}

    <div class="section fill" id="resseting">
        <div class="container">
            <div class="row">
                <div class="col-xs-12 col-md-4 col-md-offset-4">
                    <div class="panel panel-default text-center">
                        <div class="panel-heading">
                            <h2 class="panel-title">{{ 'resetting.request.title'|trans }}</h2>
                        </div>
                        <div class="panel-body">
                            <form action="{{ path('fos_user_resetting_send_email') }}" method="POST" class="fos_user_resetting_request">
                                <div class="form-group">
                                    {% if invalid_username is defined %}
                                        <div class="alert alert-danger alert-dismissible" role="alert">
                                            <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">Ã—</span></button>
                                            {{ 'resetting.request.invalid_username'|trans({'%username%': invalid_username}) }}
                                        </div>
                                    {% endif %}
                                    <div class="input-group">
                                        <div class="input-group-addon">{{ icon('envelope fa-fw') }}</div>
                                        <input class="form-control" type="text" id="username" name="username" required="required"  placeholder="{{ 'resetting.request.email'|trans }}" />
                                    </div>
                                </div>
                                <button type="submit" class="btn btn-primary btn-block">{{ icon('envelope') }}&nbsp;{{ 'resetting.request.submit'|trans }}</button>
                            </form>
                        </div>
                        <div class="panel-footer text-center"><a href="{{ path("fos_user_security_login") }}">{{ 'security.login.goback'|trans }}</a></div>
                    </div>
                </div>
            </div>
        </div>
        <div id="push"></div>
    </div>

{% include 'FotoJoinFrontPageBundle:Base:footer.html.twig' %}

{% endblock body %}