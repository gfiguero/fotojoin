{% extends "FotoJoinFrontPageBundle:Base:base.html.twig" %}
{% use 'FotoJoinFrontPageBundle:Base:navbar.html.twig' %}
{% use 'FotoJoinFrontPageBundle:Base:footer.html.twig' %}

{% trans_default_domain 'FotoJoinUserBundle' %}

{% block title %}{{ 'resetting.reset.title'|trans }}{% endblock %}

{% block stylesheet %}
    <link href="{{ asset('vendor/bootstrap-social/bootstrap-social.css') }}" rel="stylesheet">
    <style type="text/css">
        #resseting {
            margin-top: 100px;
        }
    </style>
{% endblock %}

{% block body %}
    {% block navbar %}{{ parent() }}{% endblock %}
    <div class="section fill" id="resseting">
        <div class="container">
            <div class="row">
                <div class="col-xs-12 col-md-4 col-md-offset-4">
                    <div class="panel panel-default text-center">
                        <div class="panel-heading">
                            <h2 class="panel-title">{{ 'resetting.request.title'|trans }}</h2>
                        </div>
                        <div class="panel-body">
                            {{ form_start(form, { 'action': path('fos_user_resetting_reset', {'token': token}), 'attr': { 'class': 'fos_user_resetting_reset' } }) }}
                                {{ form_widget(form) }}
                                <button type="submit" class="btn btn-primary btn-block">{{ icon('save') }}&nbsp;{{ 'resetting.reset.submit'|trans }}</button>
                            {{ form_end(form) }}
                        </div>
                        <div class="panel-footer"><a href="{{ path("fos_user_security_login") }}">{{ 'security.login.goback'|trans }}</a></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    {% block footer %}{{ parent() }}{% endblock %}

{% endblock body %}