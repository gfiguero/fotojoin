{% extends 'FotoJoinControlPanelBundle:Base:layout.html.twig' %}

{% block title %}{{ 'album.add'|trans }}{% endblock %}

{% trans_default_domain 'FotoJoinControlPanelBundle' %}

{% block controlpanel %}
    <div id="page-wrapper">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">{% include 'FotoJoinControlPanelBundle:Base:icon.html.twig' %}{{ 'album.add.title'|trans({'%name%': album.name}) }}</h1>
                {% include 'FotoJoinControlPanelBundle:Base:flashbag.html.twig' %}
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->
        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <div class="btn-toolbar">
                            <a type="button" class="btn btn-default" href="{{ path('album_index') }}">{{ icon('list fa-fw') }}&nbsp;{{ 'album.list'|trans }}</a>
                            <a type="button" class="btn btn-default" href="{{ path('album_edit', { id : album.id }) }}">{{ icon('edit fa-fw') }}&nbsp;{{ 'album.edit.link'|trans }}</a>
                        </div>
                    </div>
                    <div class="panel-body">
{#}                        <form id="my-dropzone" name="album" method="post" action="{{ path('album_dropzone', { 'id' : album.id }) }}" class="dropzone" role="form" enctype="multipart/form-data"></form>{#}
                        {{ form_start(add_form, { 'style': 'horizontal', 'attr' : { 'id' : 'my-dropzone', 'class' : 'dropzone' } }) }}
                            {{ form_widget(add_form) }}
                        {{ form_end(add_form) }}
                    </div>
                </div>
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->

    </div>
    <!-- /#page-wrapper -->


{% endblock %}

