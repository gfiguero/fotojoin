{% extends 'FotoJoinControlPanelBundle:Base:base.html.twig' %}

{% block title %}{{ 'message.contact'|trans({}, 'FotoJoinControlPanelBundle') }}{% endblock %}

{% block body %}
    <div id="page-wrapper">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">{% include 'FotoJoinControlPanelBundle:Base:icon.html.twig' %}{{ 'message.contact'|trans({}, 'FotoJoinControlPanelBundle') }}</h1>
                {% include 'FotoJoinControlPanelBundle:Base:flashbag.html.twig' %}
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->
        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-body">
                        {{ form_start(messageForm, {'style':'horizontal'}) }}
                        {{ form_widget(messageForm) }}
                        <div class="form-group">
                            <div class="col-md-8 col-md-offset-4">
                                <button type="submit" class="btn btn-primary">Enviar</button>
                            </div>
                        </div>
                        {{ form_end(messageForm) }}
                    </div>
                </div>
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->
    </div>
    <!-- /#page-wrapper -->

{% endblock %}
