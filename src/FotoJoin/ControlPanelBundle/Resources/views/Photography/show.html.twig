{% extends ':ControlPanel:base.html.twig' %}

{% block title %}{{ 'photography.show'|trans({}, 'FotoJoinControlPanelBundle') }}{% endblock %}

{% block body %}
    <div id="page-wrapper">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">{% include ':ControlPanel:icon.html.twig' %}{{ 'photography.show'|trans({}, 'FotoJoinControlPanelBundle') }}</h1>
                {% include ':ControlPanel:flashbag.html.twig' %}
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->
        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default">
                                        
                    <div class="panel-heading">
                        <div class="btn-toolbar">
                            <a type="button" class="btn btn-default" href="{{ path('photography_index') }}">{{ icon('list') }}&nbsp;{{ 'photography.list'|trans({}, 'FotoJoinControlPanelBundle') }}</a>
                            <a type="button" class="btn btn-warning" href="{{ path('photography_edit', { 'id': photography.id }) }}">{{ icon('edit') }}&nbsp;{{ 'photography.edit'|trans({}, 'FotoJoinControlPanelBundle') }}</a>
                            <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#modal-confirm">{{ icon('trash-o') }}&nbsp;{{ 'photography.delete'|trans({}, 'FotoJoinControlPanelBundle') }}</button>
                            <div class="modal fade" id="modal-confirm" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
                                <div class="modal-dialog modal-md" role="document">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                                            <h4 class="modal-title" id="myModalLabel">{{ 'Are you sure?'|trans({}, 'FotoJoinControlPanelBundle') }}</h4>
                                        </div>
                                        <div class="modal-body">
                                            <p>{{ 'Deleted records can not be recovered.'|trans({}, 'FotoJoinControlPanelBundle') }}</p>
                                        </div>
                                        <div class="modal-footer">
                                            <div class="pull-right" style="height:34px;">
                                                {{ form_start(delete_form) }}
                                                    <button type="submit" class="btn btn-danger">{{ icon('trash-o') }}&nbsp;{{ 'photography.delete'|trans({}, 'FotoJoinControlPanelBundle') }}</button>
                                                {{ form_end(delete_form) }}</div>
                                            <div class="clearfix"></div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="panel-body">
                        <div class="col-lg-4">
                            <img class="img-responsive center-block" src="{{ vich_uploader_asset(photography, 'file', 'FotoJoin\\ControlPanelBundle\\Entity\\Photography')|imagine_filter('frontpage_gallery_modal') }}" alt="{{ 1 }}" />
                        </div>
                        <div class="col-lg-8">
                            <dl class="dl-horizontal dl-horizontal-sm dl-horizontal-md dl-horizontal-lg">
                                <dt>{{ 'photography.filename'|trans({}, 'FotoJoinControlPanelBundle') }}</dt>
                                <dd>{% if photography.filename %}{{ photography.filename }}{% endif %}</dd>
                                <dt>{{ 'photography.capture.camera'|trans({}, 'FotoJoinControlPanelBundle') }}</dt>
                                <dd>{% if photography.camera %}{{ photography.camera }}{% endif %}</dd>
                                <dt>{{ 'photography.capture.shutterspeed'|trans({}, 'FotoJoinControlPanelBundle') }}</dt>
                                <dd>{% if photography.shutterspeed %}{{ photography.shutterspeed }}{% endif %}</dd>
                                <dt>{{ 'photography.capture.aperture'|trans({}, 'FotoJoinControlPanelBundle') }}</dt>
                                <dd>{% if photography.aperture %}{{ photography.aperture }}{% endif %}</dd>
                                <dt>{{ 'photography.capture.iso'|trans({}, 'FotoJoinControlPanelBundle') }}</dt>
                                <dd>{% if photography.iso %}{{ photography.iso }}{% endif %}</dd>
                                <dt>{{ 'photography.capture.focallength'|trans({}, 'FotoJoinControlPanelBundle') }}</dt>
                                <dd>{% if photography.focallength %}{{ photography.focallength }}{% endif %}</dd>
                                <dt>{{ 'photography.capture.date'|trans({}, 'FotoJoinControlPanelBundle') }}</dt>
                                <dd>{% if photography.date %}{{ photography.date|localizeddate('full', 'full', 'es_ES', 'America/Santiago', "d 'de' LLLL 'de' Y - HH:mm") }}{% endif %}</dd>
                                <dt>{{ 'photography.createdAt'|trans({}, 'FotoJoinControlPanelBundle') }}</dt>
                                <dd>{% if photography.createdAt %}{{ photography.createdAt|localizeddate('full', 'full', 'es_ES', 'America/Santiago', "d 'de' LLLL 'de' Y - HH:mm") }}{% endif %}</dd>
                                <dt>{{ 'photography.updatedAt'|trans({}, 'FotoJoinControlPanelBundle') }}</dt>
                                <dd>{% if photography.updatedAt %}{{ photography.updatedAt|localizeddate('full', 'full', 'es_ES', 'America/Santiago', "d 'de' LLLL 'de' Y - HH:mm") }}{% endif %}</dd>
                            </dl>
                        </div>
                    </div>
                </div>
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->
    </div>
    <!-- /#page-wrapper -->
{% endblock %}

