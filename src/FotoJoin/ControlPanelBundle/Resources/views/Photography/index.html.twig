{% extends 'FotoJoinControlPanelBundle:Photography:layout.html.twig' %}

{% block title %}{{ 'photography.index'|trans({}, 'FotoJoinControlPanelBundle') }}{% endblock %}

{% block photography %}
    {% include 'FotoJoinControlPanelBundle:Base:flashbag.html.twig' %}

    <!-- /.row -->
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-body">
                    {% for key, photography in photographies %}
                    <div class="col-xs-12 col-sm-6 col-md-4 col-lg-3">
                        <div class="thumbnail">
                            <img class="img-responsive" src="{{ vich_uploader_asset(photography, 'file', 'FotoJoin\\ControlPanelBundle\\Entity\\Photography')|imagine_filter('controlpanel_photography_small') }}" alt="{{ 1 }}" />
                            <div class="caption">
                                <button type="button" class="btn btn-default btn-xs">{{ icon('search fa-fw') }}</button>
                                <button type="button" class="btn btn-primary btn-xs">{{ icon('edit fa-fw') }}</button>
                                <button type="button" class="btn btn-danger btn-xs">{{ icon('trash-o fa-fw') }}</button>
                            </div>
                        </div>
                    </div>
                    {% endfor %}
                </div>

                <div class="panel-footer">
                    <div class="text-center">
                        {{ knp_pagination_render(photographies) }}
                    </div>
                </div>
            </div>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->

{% endblock %}

