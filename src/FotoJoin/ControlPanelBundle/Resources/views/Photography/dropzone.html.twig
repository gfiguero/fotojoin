{% extends 'FotoJoinControlPanelBundle:Base:base.html.twig' %}

{% block title %}{{ 'photography.dropzone'|trans }}{% endblock %}

{% trans_default_domain 'FotoJoinControlPanelBundle' %}

{% block body %}
    <div id="page-wrapper">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">{% include 'FotoJoinControlPanelBundle:Base:icon.html.twig' %}{{ 'photography.dropzone'|trans }}</h1>
                {% include 'FotoJoinControlPanelBundle:Base:flashbag.html.twig' %}
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->
        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <div class="btn-toolbar">
                            <a type="button" class="btn btn-default" href="{{ path('photography_index') }}">{{ icon('list') }}&nbsp;{{ 'photography.list'|trans }}</a>
                        </div>
                    </div>
                    <div class="panel-body">
                        {{ form_start(dropzone_form, { 'style': 'horizontal', 'attr': { 'class': 'dropzone', 'id': 'my-dropzone'} }) }}
                        {{ form_widget(dropzone_form) }}
                        {{ form_end(dropzone_form) }}
                    </div>
                </div>
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->
    </div>
    <!-- /#page-wrapper -->

{% endblock %}

{% block javascript %}
    <script src="{{ asset('js/dropzone/dropzone.js') }}"></script>
    <script type="text/javascript">
        Dropzone.options.myDropzone = {
            dictDefaultMessage: 'Arrastre sus fotos aqu√≠ para iniciar la carga',
            maxFilesize: 20,
            paramName: 'photography'
        };
    </script>
{% endblock %}